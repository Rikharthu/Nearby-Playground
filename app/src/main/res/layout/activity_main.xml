<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context="com.example.nearbyplayground.MainActivity">

    <Button
        android:id="@+id/advertiseBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Start Advertising"
        app:layout_constraintEnd_toStartOf="@+id/stopAdvertisingBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/discoverBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Start Discovering"
        app:layout_constraintEnd_toStartOf="@+id/stopDiscoveryBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/advertiseBtn"/>

    <Button
        android:id="@+id/stopAdvertisingBtn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:text="Stop"
        app:layout_constraintEnd_toStartOf="@+id/advertiseRadio"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/advertiseBtn"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/stopDiscoveryBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Stop"
        app:layout_constraintEnd_toStartOf="@+id/discoverRadio"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/discoverBtn"
        app:layout_constraintTop_toBottomOf="@+id/stopAdvertisingBtn"/>

    <ListView
        android:id="@+id/endpointsList"
        android:layout_width="368dp"
        android:layout_height="383dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/discoverBtn"
        tools:layout_editor_absoluteX="8dp"/>

    <RadioButton
        android:id="@+id/advertiseRadio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="@+id/stopAdvertisingBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/stopAdvertisingBtn"
        app:layout_constraintTop_toTopOf="@+id/stopAdvertisingBtn"/>

    <RadioButton
        android:id="@+id/discoverRadio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="@+id/stopDiscoveryBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/stopDiscoveryBtn"
        app:layout_constraintTop_toTopOf="@+id/stopDiscoveryBtn"/>
</android.support.constraint.ConstraintLayout>
